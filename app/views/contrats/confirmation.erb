<h1>CONFIRMATION</h1>

  <div class="row">
      <div class="col-md-12">
        <h4><%= @reservation.location.titre %> </h4>
        <%= @reservation.location.description %>
        <%= @reservation.location.prix %>
        <%= @reservation.nbre_personne %>
        <%= @reservation.date_debut_reservation %>
        <%= @reservation.date_fin_reservation %>

        <%= form_for @contrat do |form| %>

          <%= form.hidden_field :reservation_id, :value => @reservation.id %>
          <%= form.submit 'Confirmer', :class => "btn btn-success" %>

        <% end %>
      </div>
  </div>
