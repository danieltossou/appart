<div class="container-fluid">
<div class="row">
  <div class="col s12">
    <div class="carousel carousel-slider">
      <%= image_tag(@reservation.location.photo_url, width: '100%') if @reservation.location.photo.present? %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s8">
      <div class="row">
        <div class="col s9">
          <h5><%= @reservation.location.titre %></h5>
          <p><b>Lieu: <%= @reservation.location.adresse %></b></p>
          <p>par <%= @reservation.user.email %></p>
          <p>Type: <%= @reservation.type_reservation %></p>
        </div>
        <div class="col s3">
          <p><b><%= @reservation.location.prix %> Fcfa</b></p>
        </div>
      </div><br>
    </div>
  </div>
</div>
</div>