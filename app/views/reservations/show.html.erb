<div class="container-fluid">
<div class="row">
  <div class="col s12">
    <div class="carousel carousel-slider">
      <% @images.each do | image | %>
        <a class="carousel-item" href="#"><%= image_tag(image.titre_url, width: '100%') if image.present? %></a>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s8">
      <div class="row">
        <div class="col s9">
          <h5><%= @reservation.location.titre %></h5>
          <p><b>Lieu: <%= @reservation.location.adresse %></b></p>
          <p>par <%= @reservation.user.email %></p>
          <p>Type: <%= @reservation.type_reservation %></p>
        </div>
        <div class="col s3">
          <p><b><%= @reservation.location.prix %> Fcfa</b></p>
        </div>
      </div><br>
    </div>
        <%= link_to 'CONFIRMER', confirmation_contrats_path(@reservation), class: 'waves-effect waves-light btn green' %>
  </div>
</div>
</div>