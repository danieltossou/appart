<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :titre %>
    <%= form.text_field :titre %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :adresse %>
    <%= form.text_area :adresse %>
  </div>

  <div class="field">
    <%= form.label :etat %>
    <%= form.check_box :etat %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, as: :file %>
  </div>

  <div class="field">
    <%= form.label :prix %>
    <%= form.number_field :prix %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
