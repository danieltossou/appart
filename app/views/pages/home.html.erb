<!-- Header -->
<header>
    <div class="row">
        <div class="col s6 pull-s1">
            <div class="card white col s12 search-form">
                <div class="card-content">
                    <div class="card-title">
                        <span><b>Trouver des logements partout à Bamako</b></span>
                    </div><br>
                    <form action="">
                            <div class="input-field col s12">
                                <input placeholder="Commune ou quartier" id="lieu" type="text" name="">
                                <label for="lieu"><b>Où</b></label>
                            </div><br><br><br><br>

                            <div style="padding-left:10px;">
                                <label><b>Colocation ?</b><br><br>
                                    <p>
                                        <label>
                                            <input name="" type="radio" />
                                            <span>OUI</span>
                                        </label>    
                                    </p>
                                    <p>
                                        <label>
                                            <input name="" type="radio" />
                                            <span>NON</span>
                                        </label>
                                    </p>
                                </label>
                            </div><br>

                            <div class="input-field col s12">
                                <select>
                                    <option value="" disabled selected>Type de logements</option>
                                    <option value="">Villa</option>
                                    <option value="">Appartement</option>
                                </select>
                                <label><b>Genre</b></label>
                            </div><br><br><br><br>
                            <div style="padding-left:10px;">
                                <input type="submit" value="Rechercher" class="waves-effect waves-light btn blue">
                            </div>
                        
                    </form>
                </div>
            </div>
        </div>
        <div class="col s6"></div>
    </div>
</header><br><br>
<!-- Fin Header -->

